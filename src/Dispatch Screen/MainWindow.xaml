<Window x:Class="Dispatch_Screen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dispatch_Screen"
        mc:Ignorable="d"
        Title="Dispatch Screen" 
        Loaded="MainWindow_Load"
        Width="530" Height="287">

    <Window.Resources>
        <Style TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Grid >
                                <Border Width="25" Height="10" Background="LightGray" CornerRadius="7" ></Border>
                                <Border x:Name="button" Height="12.5" Width="12.5" CornerRadius="12.5" HorizontalAlignment="Left"  ></Border>
                            </Grid>
                            <ContentPresenter x:Name="content" Margin="10,0,0,0" Content="{TemplateBinding Content}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Resources>
                            <Storyboard x:Key="right">
                                <ThicknessAnimation Storyboard.TargetProperty="Margin" Storyboard.TargetName="button" Duration="0:0:0.4" From="0,0,0,0" To="14,0,0,0" >
                                    <ThicknessAnimation.EasingFunction>
                                        <CircleEase EasingMode="EaseOut"/>
                                    </ThicknessAnimation.EasingFunction>
                                </ThicknessAnimation>
                            </Storyboard>
                            <Storyboard x:Key="left">
                                <ThicknessAnimation Storyboard.TargetProperty="Margin" Storyboard.TargetName="button" Duration="0:0:0.4" From="14,0,0,0" To="0,0,0,0" >
                                    <ThicknessAnimation.EasingFunction>
                                        <CircleEase EasingMode="EaseOut"/>
                                    </ThicknessAnimation.EasingFunction>
                                </ThicknessAnimation>
                            </Storyboard>
                        </ControlTemplate.Resources>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="false">
                                <Trigger.ExitActions>
                                    <RemoveStoryboard BeginStoryboardName="leftt"></RemoveStoryboard>
                                    <BeginStoryboard Storyboard="{StaticResource right}" x:Name="rightt" ></BeginStoryboard>
                                </Trigger.ExitActions>
                                <Setter TargetName="button" Property="Background" Value="#757575"></Setter>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="true">
                                <Trigger.ExitActions>
                                    <RemoveStoryboard BeginStoryboardName="rightt"></RemoveStoryboard>
                                    <BeginStoryboard Storyboard="{StaticResource left}" x:Name="leftt" ></BeginStoryboard>
                                </Trigger.ExitActions>
                                <Setter TargetName="button" Property="Background" Value="#20BF55"></Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid  Background="#363636" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*" />
            <RowDefinition Height="79*"/>
            <RowDefinition Height="14*"/>
        </Grid.RowDefinitions>
        <Viewbox Grid.Column="1" Grid.Row="0">
            <Button Content="VIEW CUSTOMERS" FontFamily="Century Gothic" Width="147" Background="#2691bb" Foreground="White" Height="37" BorderBrush="#2691bb" Margin="0,0,50,0">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Viewbox>
        <Viewbox Grid.Column="2" Grid.Row="0">
            <Button Content="VIEW CUSTOMERS" FontFamily="Century Gothic" Width="147" Background="#2691bb"  Foreground="White" Height="37" BorderBrush="#2691bb" Margin="0,0,50,0">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Viewbox>
        <Viewbox Grid.Column="3" Grid.Row="0">
            <Button Content="VIEW CUSTOMERS" FontFamily="Century Gothic" Width="147" Background="#2691bb" Foreground="White" Height="37" BorderBrush="#2691bb" Margin="0,0,50,0">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Viewbox>
        <Viewbox Grid.Column="4" Grid.Row="0" Grid.ColumnSpan="1">
            <WrapPanel Margin="20,0,0,0">
                <TextBlock Foreground="#5c8eff" FontSize="22" Grid.Column="0" VerticalAlignment="Center" FontFamily="Calibri Light" Width="83" Height="30"> 
                Dispatch
                </TextBlock>
                <TextBlock Foreground="#ffb45a" FontSize="22" Grid.Column="0" VerticalAlignment="Center" FontFamily="Calibri Light" Width="64" Height="30"> 
                   Screen
                </TextBlock>
                <Image Source="Static Files/DeliveryIcon.png" Width="47" Height="30" ></Image>
            </WrapPanel>
        </Viewbox>
        <Viewbox Grid.Column="5" Grid.Row="0">
            <Button Content="MANAGE PARTNERS"  FontFamily="Century Gothic"  Width="147" Background="#2691bb" Foreground="White" Height="37" BorderBrush="#2691bb"   Margin="50,0,0,0">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Viewbox>
        <Viewbox Grid.Column="6" Grid.Row="0">
            <Button Content="VIEW CUSTOMERS" FontFamily="Century Gothic" Width="147" Background="#2691bb" Foreground="White" Height="37" BorderBrush="#2691bb" Margin="50,0,0,0">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Viewbox>
        <Viewbox Grid.Column="7" Grid.Row="0" >
            <Button Content="ADD ORDER" FontFamily="Century Gothic"  Width="147"  Background="#2691bb" Foreground="White" Height="37" BorderBrush="#2691bb" Margin="50,0,0,0">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Viewbox>
        <Viewbox Grid.Column="8" Grid.Row="0">
            <Button Background="Transparent" BorderThickness="0">
                <Image Source="Static Files/UserIcon.png"  Height="360" Width="747" RenderTransformOrigin="0.998,0.537" Margin="120,0,0,0"></Image>
            </Button>
        </Viewbox>
        <Viewbox Grid.Row="1" Grid.ColumnSpan="9">
            <StackPanel>
                <WrapPanel Background="#f5f7f7" Width="600" Height="10">
                    <Button Background="Transparent" BorderThickness="0" Click="RefreshOrders" Margin="2,0,0,0">
                        <Image Source="Static Files/refresh.png"></Image>
                    </Button>
                    <TextBlock VerticalAlignment="Center" FontSize="6" Foreground="#b8baba" Margin="5,0,0,0">Click to get orders</TextBlock>
                </WrapPanel>
                <DataGrid Height="239" Width="600" SelectionMode="Single" Margin="7,0,7,0" HorizontalAlignment="Center" HeadersVisibility="Column" CanUserResizeRows="False" CanUserAddRows="False" Name="OrdersGrid" BorderThickness="0" CanUserSortColumns = "True" GridLinesVisibility="None"  IsReadOnly="True" RowBackground="White" AutoGenerateColumns="False"  HorizontalScrollBarVisibility="Auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Number" Binding="{Binding Path=Id}" Width="30"/>
                        <DataGridTemplateColumn Header="Driver"  Width="25" >
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding DriverType}" Margin="2,0,0,0"></TextBlock>
                                        <TextBlock Text="{Binding Driver}"></TextBlock>
                                        <TextBlock Text="{Binding DriverName}" Margin="3,0,0,0"></TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Total" Binding="{Binding Path=TotalPrice}" Width="25" />
                        <DataGridTextColumn Header="Restaurant Name" Binding="{Binding Path=Restaurant}" Width="90" />
                        <DataGridTextColumn Header="Address" Binding="{Binding Path=OrderAddress}" Width="70" />
                        <DataGridTextColumn Header="Customer" Binding="{Binding Path=User}" Width="66" />
                        <DataGridTextColumn  Header="Customer Phone" Binding="{Binding Path=PhoneNumber}" Width="50">
                            <DataGridTextColumn.CellStyle>
                                <Style TargetType="DataGridCell" >
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Grid  Background="{TemplateBinding Background}">
                                                    <ContentPresenter VerticalAlignment="Center" Margin="12,0,0,0" HorizontalAlignment="Left"  />
                                                    <Image Grid.Column="0" Margin="2,0,0,0" Width="9" Height="9"  Source="Static Files/PhoneIcon.png" HorizontalAlignment="Left"/>
                                                    <Border x:Name="border" BorderBrush="#CFD4D6" BorderThickness="0.5,0,0,0.5"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="FontFamily" Value="Tahoma"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Height" Value="10"/>
                                    <Setter Property="FontSize" Value="5"/>
                                    <Style.Triggers>
                                        <Trigger Property="DataGridCell.IsSelected" Value="True">
                                            <Setter Property="Background" Value="#ecf0f1" />
                                        </Trigger>
                                        <DataTrigger Binding="{Binding PriorityCode}" Value="-1">
                                            <Setter Property="Foreground" Value="#FFA500">
                                            </Setter>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding PriorityCode}" Value="Accepted">
                                            <Setter Property="Foreground" Value="#ff385a">
                                            </Setter>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding PriorityCode}" Value="Assigned">
                                            <Setter Property="Foreground" Value="#412aff">
                                            </Setter>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding PriorityCode}" Value="Arrived">
                                            <Setter Property="Foreground" Value="#d56afc">
                                            </Setter>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding PriorityCode}" Value="Departed">
                                            <Setter Property="Foreground" Value="#2d9015">
                                            </Setter>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding PriorityCode}" Value="Completed">
                                            <Setter Property="Foreground" Value="#4c4d4d">
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.CellStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Count" Binding="{Binding Path=UserOrdersCount}" Width="25" />
                        <DataGridTextColumn Header="Priority Code" Binding="{Binding Path=PriorityCode}" Width="50" />
                        <DataGridTextColumn Header="Start" Binding="{Binding Path=OrderStart}" Width="25"/>
                        <DataGridTextColumn Header="Place" Binding="{Binding Path=Place}" Width="25" />
                        <DataGridTextColumn Header="Pickup" Binding="{Binding Path=Pickup}" Width="25" />
                        <DataGridTextColumn Header="Assign" Binding="{Binding Path=Assign}" Width="25" />
                        <DataGridTextColumn Header="Arrive" Binding="{Binding Path=Arrive}" Width="25" />
                        <DataGridTextColumn Header="Depart" Binding="{Binding Path=Depart}" Width="25" />
                        <DataGridTextColumn Header="Complete" Binding="{Binding Path=Complete}" Width="50"/>
                    </DataGrid.Columns>
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="FontSize" Value="4"/>
                            <Setter Property="Height" Value="12"/>
                            <Setter Property="Background" Value="#f5f7f7"/>
                            <Setter Property="Foreground" Value="#9a999b"/>
                            <Setter Property="BorderBrush" Value="#cfd4d6"/>
                            <Setter Property="BorderThickness" Value="0.5,0.5,0,0.5"/>
                            <Setter Property="Padding" Value="3,0,0,0"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="FontFamily" Value="Tahoma"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Height" Value="10"/>
                            <Setter Property="FontSize" Value="5"/>
                            <EventSetter Event="MouseLeftButtonUp" Handler="DataGridRow_MouseClick"/>
                            <Style.Triggers>
                                <Trigger Property="DataGridRow.IsSelected" Value="True">
                                    <Setter Property="Background" Value="#ecf0f1" />
                                </Trigger>
                                <DataTrigger Binding="{Binding PriorityCode}" Value="-1">
                                    <Setter Property="Foreground" Value="#FFA500">
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding PriorityCode}"  Value="Accepted">
                                    <Setter Property="Foreground" Value="#ff385a">
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding PriorityCode}" Value="Assigned">
                                    <Setter Property="Foreground" Value="#412aff">
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding PriorityCode}" Value="Arrived">
                                    <Setter Property="Foreground" Value="#d56afc">
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding PriorityCode}" Value="Departed">
                                    <Setter Property="Foreground" Value="#2d9015">
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding PriorityCode}" Value="Completed">
                                    <Setter Property="Foreground" Value="#4c4d4d">
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                                        <Grid Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center" />
                                            <Border x:Name="border" BorderBrush="#CFD4D6" BorderThickness="0.5,0,0,0.5"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="DataGridCell.IsSelected" Value="True">
                                    <Setter Property="Background" Value="#ecf0f1" />
                                </Trigger>
                                <DataTrigger Binding="{Binding PriorityCode}" Value="-1">
                                    <Setter Property="Foreground" Value="#FFA500">
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding PriorityCode}" Value="Accepted">
                                    <Setter Property="Foreground" Value="#ff385a">
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding PriorityCode}" Value="Assigned">
                                    <Setter Property="Foreground" Value="#412aff">
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding PriorityCode}" Value="Arrived">
                                    <Setter Property="Foreground" Value="#d56afc">
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding PriorityCode}" Value="Departed">
                                    <Setter Property="Foreground" Value="#2d9015">
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding PriorityCode}" Value="Completed">
                                    <Setter Property="Foreground" Value="#4c4d4d">
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                </DataGrid>
            </StackPanel>
        </Viewbox>
        <Viewbox Grid.Row="2" Grid.ColumnSpan="9" HorizontalAlignment="Center">
            <Border BorderBrush="#fcfdfe" CornerRadius="4,4,0,0" BorderThickness="3,3,0,0" Margin="0,2,0,0">
                <StackPanel Background="#fcfdfe" Visibility="Visible" Orientation="Horizontal" Width="711" Height="47" >
                    <WrapPanel VerticalAlignment="Center" Width="697" Margin="10,0,0,0">
                        <CheckBox Name="AllOrdersButton" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="9" Foreground="#636666" Width="81" Height="21" Click="GetAllOrders" >All Orders</CheckBox>
                        <DatePicker FontSize="8" FontFamily="Century Gothic"  Padding="0,4,0,0" Name="OrdersDate" Background="Transparent" Foreground="#636666" Height="30" BorderBrush="#636666" Width="108">
                            <DatePicker.Resources>
                                <Style TargetType="DatePickerTextBox">
                                    <Setter Property="Padding" Value="0,2,0,0"/>
                                    <Setter Property="IsReadOnly" Value="True"/>
                                    <Setter Property="Focusable" Value="False"/>
                                    <Setter Property="IsEnabled" Value="False" />
                                    <Setter Property="IsHitTestVisible" Value="False"/>
                                </Style>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="2"/>
                                </Style>
                            </DatePicker.Resources>
                        </DatePicker>
                        <WrapPanel VerticalAlignment="Center" Width="369" Name="PriorityCodeButtons">
                            <WrapPanel.Resources>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Margin" Value="10,0" />
                                </Style>
                            </WrapPanel.Resources>
                            <Button Background="Transparent"  BorderThickness="0">
                                <Image Source="Static Files/undo.png" Height="20" Width="20"></Image>
                            </Button>
                            <Button Content="PLACE" Tag="0" FontSize="8" FontFamily="Century Gothic"  Background="#ff385a" Foreground="White" Height="18" BorderBrush="#ff385a"  Width="36" x:Name="PlaceButton" Click="ChangeOrderStatus" IsEnabled="False" >
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="2"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button Content="ASSIGN" Tag="1" FontSize="8" FontFamily="Century Gothic"  Background="#412aff" Foreground="White" Height="18" BorderBrush="#412aff"  Width="40" x:Name="AssignButton" Click="ChangeOrderStatus" IsEnabled="False">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="2"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button Content="ARRIVE" Tag="2" FontSize="8" FontFamily="Century Gothic"  Background="#d56afc" Foreground="White" Height="18" BorderBrush="#d56afc"  Width="40" x:Name="ArriveButton" Click="ChangeOrderStatus" IsEnabled="False">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="2"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button Content="DEPART" Tag="3" FontSize="8" FontFamily="Century Gothic"  Background="#2d9015" Foreground="White" Height="18" BorderBrush="#2d9015" Width="43" x:Name="DepartButton"   Click="ChangeOrderStatus" IsEnabled="False">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="2"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button Content="COMPLETE" Tag="4" FontSize="8" FontFamily="Century Gothic"  Background="#4c4d4d" Foreground="White" Height="18" BorderBrush="#4c4d4d" Width="58" x:Name="CompleteButton"  Click="ChangeOrderStatus" IsEnabled="False">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="2"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </WrapPanel>
                        <WrapPanel >
                            <WrapPanel.Resources>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Margin" Value="20,0" />
                                </Style>
                            </WrapPanel.Resources>
                            <TextBlock  VerticalAlignment="Center" Name="OrdersCount"></TextBlock>
                            <Button Background="Transparent"  BorderThickness="0" Click="OpenDriversPage">
                                <Image Source="Static Files/Driver.png" Height="32" Width="32"></Image>
                            </Button>
                        </WrapPanel>
                    </WrapPanel>
                </StackPanel>
            </Border>
        </Viewbox>
    </Grid>
</Window>