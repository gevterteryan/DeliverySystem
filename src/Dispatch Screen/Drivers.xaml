<Window x:Class="Dispatch_Screen.Drivers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dispatch_Screen"
        mc:Ignorable="d" Title="Drivers" Height="790" Width="650" Closing="Drivers_Closing" ResizeMode="NoResize">
    <Grid Background="#363636">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="99*" />
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="1">
            <StackPanel>
                <WrapPanel Background="#f5f7f7" Width="950" Height="35">
                    <Button Background="Transparent" BorderThickness="0" Click="RefreshDrivers" Margin="2,0,0,0">
                        <Image Source="Static Files/refresh.png"></Image>
                    </Button>
                    <TextBlock VerticalAlignment="Center" FontSize="20" Foreground="#b8baba" Margin="5,0,0,0">Click to get drivers</TextBlock>
                </WrapPanel>
                <DataGrid Height="1100" Width="950" SelectionMode="Single"  HorizontalAlignment="Center" HeadersVisibility="Column" CanUserResizeRows="False" CanUserAddRows="False" Name="DriversGrid" BorderThickness="0" CanUserSortColumns = "True" GridLinesVisibility="None"  IsReadOnly="True" RowBackground="White" VerticalScrollBarVisibility="Visible" AutoGenerateColumns="False"  HorizontalScrollBarVisibility="Auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Type" Binding="{Binding Path=Type}" Width="90"/>
                        <DataGridTemplateColumn Header="Driver Code" >
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Type}" Margin="5,0,0,0"></TextBlock>
                                        <TextBlock Text="{Binding Id}"></TextBlock>
                                        <TextBlock Text="{Binding FirstName}" Margin="10,0,0,0"></TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Driver" >
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding FirstName}" Margin="5,0,0,0"></TextBlock>
                                        <TextBlock Text="{Binding LastName}" Margin="10,0,0,0"></TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Count" Binding="{Binding Path=AssinedOrderCount}" Width="100" />
                        <DataGridTextColumn Header="Last Order Address" Binding="{Binding Path=LastOrderAddress}" Width="360" />
                    </DataGrid.Columns>
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="FontSize" Value="26"/>
                            <Setter Property="Height" Value="50"/>
                            <Setter Property="Background" Value="#f5f7f7"/>
                            <Setter Property="Foreground" Value="#9a999b"/>
                            <Setter Property="BorderBrush" Value="#cfd4d6"/>
                            <Setter Property="BorderThickness" Value="1.5,1.5,0,1.5"/>
                            <Setter Property="Padding" Value="10,0,0,0"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="FontFamily" Value="Tahoma"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="#4c4d4d"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Height" Value="50"/>
                            <Setter Property="FontSize" Value="26"/>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                                        <Grid Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center" />
                                            <Border x:Name="border" BorderBrush="#CFD4D6" BorderThickness="1.5,0,0,1.5"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="DataGridCell.IsSelected" Value="True">
                                    <Setter Property="Background" Value="#ecf0f1" />
                                </Trigger>
                                <DataTrigger Binding="{Binding AssinedOrderCount}" Value="0">
                                    <Setter Property="Foreground" Value="#ff385a">
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                </DataGrid>
            </StackPanel>
        </Viewbox>
    </Grid>
</Window>